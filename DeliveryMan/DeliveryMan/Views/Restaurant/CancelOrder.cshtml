@model DeliveryMan.Models.CancelOrderViewModel

@{
    ViewBag.Title = "Cancel Order";
}

<h2>@ViewBag.Title.</h2>

<h4>Cancel a waiting, pending or in-progress order.</h4>
<hr />

@using (Html.BeginForm("CancelOrder", "Restaurant", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        <div class="col-md-10">
            <dl class="dl-horizontal">
                @Html.HiddenFor(model => model.OrderId)
                <dt>
                    @Html.DisplayNameFor(model => model.OrderName)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.OrderName)
                    @Html.HiddenFor(model => model.OrderName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.OrderStatus)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.OrderStatus)
                    @Html.HiddenFor(model => model.OrderStatus)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.ETA)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ETA)
                    @Html.HiddenFor(model => model.ETA)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.PlacedTime)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.PlacedTime)
                    @Html.HiddenFor(model => model.PlacedTime)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.PickUpTime)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.PickUpTime)
                    @Html.HiddenFor(model => model.PickUpTime)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.DeliveryFee)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.DeliveryFee)
                    @Html.HiddenFor(model => model.DeliveryFee)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.CancellationFee)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.CancellationFee)
                    @Html.HiddenFor(model => model.CancellationFee)
                </dd>

            </dl>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-1 col-md-10">
            <input type="submit" class="btn btn-danger" value="Confirm Cancel Order" />
            <input type="button" value="Go Back" class="btn btn-danger"
                   onclick="location.href = '@(Url.Action("Orders", "Restaurant"))'" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
