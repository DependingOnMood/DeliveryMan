@model DeliveryMan.Models.DeliverymanMyOrdersViewModel
@using BizLogic

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Orders</title>
    @Styles.Render("~/Content/RestaurantOrders.css")
</head>
<body>
    <br />
    <div>
        <input type="button" value="Find A Order" class="btn btn-danger"
               onclick="location.href = '@(Url.Action("FindOrder", "Deliveryman"))'" />
        <div class="balance">
            @Html.DisplayNameFor(model => model.Balance)
            @Html.DisplayFor(model => model.Balance)
        </div>
    </div>
    <table class="table">
        <tr>
            <th></th>
            <th>
                Note
            </th>
            <th>
                Destination
            </th>
            <th>
                Restaurant
            </th>
            <th>
                ETA
            </th>
            <th>
                Delivery Fee
            </th>
            <th>
            </th>
        </tr>

        <tr>
            <td>Pending Orders</td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
        @foreach (var item in Model.pendingOrders.ToList())
        {
            string destination = item.Contact.getPartialAddress();
            <tr>
                <td></td>
                <td>
                    @Html.DisplayFor(modelItem => item.Note)
                </td>
                <td>
                    @destination
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Restaurant.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ETA)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeliveryFee)
                </td>
                <td>
                    <input type="button" value="Details" class="btn btn-danger"
                           onclick="location.href = '@(Url.Action("OrderDetails", "Deliveryman", new { id = item.Id }))'" />
                    <input type="button" value="Cancel" class="btn btn-danger"
                           onclick="location.href = '@(Url.Action("CancelPickup", "Deliveryman", new { id = item.Id }))'" />
                </td>
            </tr>
        }

        <tr>
            <td>In Progress Orders</td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
        @foreach (var item in Model.inProgressOrders.ToList())
        {
            string destination = item.Contact.getPartialAddress();
            <tr>
                <td></td>
                <td>
                    @Html.DisplayFor(modelItem => item.Note)
                </td>
                <td>
                    @destination
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Restaurant.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ETA)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeliveryFee)
                </td>
                <td>
                    <input type="button" value="Details" class="btn btn-danger"
                           onclick="location.href = '@(Url.Action("OrderDetails", "Deliveryman", new { id = item.Id }))'" />
                    <input type="button" value="Complete" class="btn btn-danger"
                           onclick="location.href = '@(Url.Action("CompleteOrder", "Deliveryman", new { id = item.Id }))'" />
                </td>
            </tr>
        }

        <tr>
            <td>Delivered Orders</td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
        @foreach (var item in Model.deliveredOrders.ToList())
        {
            string destination = item.Contact.getPartialAddress();
            <tr>
                <td></td>
                <td>
                    @Html.DisplayFor(modelItem => item.Note)
                </td>
                <td>
                    @destination
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Restaurant.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ETA)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeliveryFee)
                </td>
                <td>
                    <input type="button" value="Details" class="btn btn-danger"
                           onclick="location.href = '@(Url.Action("OrderDetails", "Deliveryman", new { id = item.Id }))'" />
                </td>
            </tr>
        }
    </table>
</body>
</html>
