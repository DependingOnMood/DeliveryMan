@using DataLayer
@{
    ViewBag.Title = "Find Order Results";
}

<h3>Order</h3>

<table class="table" >
    <tr>
        <th style="margin: auto">
            Restaurant Image
        </th>
        <th style="margin: auto">
            Restaurant
        </th>
        <th>
            Destination
        </th>
        <th>
            Delivery Fee
        </th>
        <th>
            ETA
        </th>
        <th>
            
        </th>
    </tr>
    @{

        foreach (Order item in (List<Order>)ViewBag.res)
        {
            string address = item.Contact.AddressToString();
            <tr >
                <td>
                    <img src="~/Content/UserIcon/@item.Restaurant.IconImageUrl" alt="" style="width: 50px; height: 50px;"/>
                </td>
                <td style="vertical-align:middle" >
                    @Html.DisplayFor(modelItem => item.Restaurant.Name)
                </td>
                <td style="vertical-align:middle" >
                    @address
                </td>
                <td style="vertical-align:middle" >
                    @Html.DisplayFor(modelItem => item.DeliveryFee)
                </td>
                <td style="vertical-align:middle" >
                    @Html.DisplayFor(modelItem => item.ETA)
                </td>
                <td style="vertical-align:middle" >
                    @Html.ActionLink("Accept","AcceptOrder", new { id = item.Id},new { @class = "btn btn-danger"})
                </td>
            </tr>
        }
    }


</table>
