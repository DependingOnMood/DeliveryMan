@model IEnumerable<DeliveryMan.Models.DeliverymanRankingViewModel>

@{
    ViewBag.Title = "Deliveryman Ranking";
}

<h2>@ViewBag.Title.</h2>

<h4>Here's a ranking of our top deliverymen!</h4>
<hr />

@foreach (var item in Model.OrderBy(x => x.Rank))
{
    if (item.TotalOrders >= 5)
    {
        <div class="form-group">
            <div class="col-md-10">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Rank)
                    </dt>
                    <dd>
                        @Html.DisplayFor(modelItem => item.Rank)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.DeliverymanName)
                    </dt>
                    <dd>
                        @Html.DisplayFor(modelItem => item.DeliverymanName)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.TotalOrders)
                    </dt>
                    <dd>
                        @Html.DisplayFor(modelItem => item.TotalOrders)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Rating)
                    </dt>
                    <dd>
                        @Html.DisplayFor(modelItem => item.Rating)
                    </dd>
                </dl>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(modelItem => item.ReviewText, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextAreaFor(modelItem => item.ReviewText, new { @readonly = "readonly" })
                </div>
            </div>
        </div>
    }
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
