@model IEnumerable<DeliveryMan.Models.DeliverymanRankingViewModel>

@{
    ViewBag.Title = "Deliveryman Ranking";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/Ranking.css")
</head>

<h2>@ViewBag.Title.</h2>

<h4>Here's a ranking of our top deliverymen!</h4>
<table class="table">
    <tr>
        <th style="vertical-align:middle">
            Image
        </th>
        <th style="vertical-align:middle">
            Name
        </th>
        <th style="vertical-align:middle">
            Order Reviewed
        </th>
        <th style="vertical-align:middle">
            Sample Review 
        </th>
        <th style="vertical-align:middle; width: 8em">
            Rating
        </th>
        <th style="vertical-align:middle">
            Score
        </th>

    </tr>
    @foreach (var item in Model.OrderByDescending(x => x.Rank))
        {
            if (item.TotalOrders >= 1)
            {
            <tr>
                <td style="vertical-align:middle">
                    <img src="~/Content/UserIcon/@item.IconUrl?id=1" style="width: 50px; height:50px">
                </td>
                <td style="vertical-align:middle">
                   @Html.DisplayFor(modelItem => item.DeliverymanName)
                </td>
                <td style="vertical-align:middle">
                    @Html.DisplayFor(modelItem => item.TotalOrders)
                </td>
                <td style="vertical-align:middle">
                    @Html.DisplayFor(modelItem => item.ReviewText)
                </td>
                <td style="vertical-align:middle">
                    @if (Math.Round(item.Rating) == 1)
                    {
                        <input type="radio" checked>
                        <input type="radio" disabled>
                        <input type="radio" disabled>
                        <input type="radio" disabled>
                        <input type="radio" disabled>
                    }

                    @if (Math.Round(item.Rating) == 2)
                    {
                        <input type="radio" disabled>
                        <input type="radio" checked>
                        <input type="radio" disabled>
                        <input type="radio" disabled>
                        <input type="radio" disabled>
                    }

                    @if (Math.Round(item.Rating) == 3)
                    {
                        <input type="radio" disabled>
                        <input type="radio" disabled>
                        <input type="radio" checked>
                        <input type="radio" disabled>
                        <input type="radio" disabled>
                    }

                    @if (Math.Round(item.Rating) == 4)
                    {
                        <input type="radio" disabled>
                        <input type="radio" disabled>
                        <input type="radio" disabled>
                        <input type="radio" checked>
                        <input type="radio" disabled>
                    }

                    @if (Math.Round(item.Rating) == 5)
                    {
                        <input type="radio" disabled>
                        <input type="radio" disabled>
                        <input type="radio" disabled>
                        <input type="radio" disabled>
                        <input type="radio" checked />
                    }
                </td>
                <td style="vertical-align:middle">
                    @Html.DisplayFor(modelItem => item.Rank)
                </td>
            </tr>
        }
    }


</table>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
