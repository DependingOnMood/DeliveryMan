    ViewBag.Title = "About";
}

<head class="background-banner">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/About.css")
</head>


<div class="background-banner">
    <br />
    <br />
